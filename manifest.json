{
    "manifest_version": 3,
    "name": "AI Frontend Debugger",
    "version": "1.0",
    "description": "Catches frontend errors and suggests fixes using AI.",

    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": { "service_worker": "background.js" },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    }
}