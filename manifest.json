{
  "manifest_version": 3,
  "name": "Dev Error and Tech Stack Assistant",
  "version": "1.0",
  "description": "Real-time error detection and tech stack analysis for developers",
  "permissions": [
    "activeTab",
    "webRequest",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost/*",
    "file:///*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>", "http://localhost/*", "file:///*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "devtools_page": "devtools.html"
}